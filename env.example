# Database Configuration
POSTGRES_USER=mobility_user
POSTGRES_PASSWORD=mobility_password
POSTGRES_DB=mobility_platform
POSTGRES_PORT=5432

# RabbitMQ Configuration
RABBITMQ_USER=mobility_user
RABBITMQ_PASSWORD=mobility_password
RABBITMQ_VHOST=mobility_vhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Redis Configuration
REDIS_PASSWORD=mobility_redis_password
REDIS_PORT=6379

# PgAdmin Configuration (Optional)
PGADMIN_EMAIL=admin@mobility.com
PGADMIN_PASSWORD=admin_password
PGADMIN_PORT=5050

# Redis Commander Configuration (Optional)
REDIS_COMMANDER_PORT=8081

# MinIO (vehicle images) - same credentials used by MinIO server and vehicle-service
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
# Public URL for image links (browser must reach MinIO). Use http://localhost:9000 when running locally.
MINIO_PUBLIC_URL=http://localhost:9000
# When running vehicle-service locally (e.g. from IDE), set MINIO_ROOT_USER and MINIO_ROOT_PASSWORD to match MinIO.
#
# TROUBLESHOOTING "Access Key Id you provided does not exist in our records":
# MinIO saves root credentials in its data volume on first start. If you changed MINIO_ROOT_USER/MINIO_ROOT_PASSWORD
# after MinIO was first run, recreate the MinIO volume: docker compose stop minio && docker rm -f mobility-minio;
# docker volume rm mobility-minio-data && docker compose up -d minio

# Frontend Configuration
FRONTEND_PORT=3000

# JWT Configuration
JWT_SECRET=mobility-platform-secret-key-minimum-256-bits-long-for-security

# Service Discovery
DISCOVERY_ENABLED=true

